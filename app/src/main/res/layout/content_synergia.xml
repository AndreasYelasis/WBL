<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SynergiaActivity"
    tools:showIn="@layout/activity_synergia"
    xmlns:card_view="http://schemas.android.com/tools">

    <EditText
        android:id="@+id/editTextIdSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="number"
        android:hint="Ταυτότητα" />

    <Button
        android:id="@+id/buttonSynergiaSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/editTextIdSearch"
        android:layout_toRightOf="@+id/editTextIdSearch"
        android:text="Αναζητηση" />

    <Button
        android:onClick="registerSynergia"
        android:id="@+id/buttonSynergiaRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextIdSearch"
        android:text="Εγγραφη Πελατη" />

    <Button
        android:id="@+id/buttonShowCust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="εμφανιση ολων"
        android:layout_below="@+id/buttonSynergiaSearch"
        android:layout_alignLeft="@+id/buttonSynergiaSearch"
        android:layout_alignStart="@+id/buttonSynergiaSearch" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="5dp"
        android:scrollbars="vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/buttonShowCust" />
</RelativeLayout>
